{
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "sourceMap": true,
    "target": "esnext",
    "declaration": true,
    "esModuleInterop": true,
    // "isolatedModules": true,
    "moduleResolution": "node",
    // "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["esnext"]
  },
  "include": [
    "src/*.ts",
    "tests/*.ts"
  ]
}
