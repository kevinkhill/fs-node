{
  "compilerOptions": {
    "strict": true,
    "sourceMap": true,
    "target": "es5",
    "alwaysStrict": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM",
      "ES2018"
    ]
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
